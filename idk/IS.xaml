        <Button x:Name="button1" Content="Study Material" FontSize="26.667" FontWeight="Bold" Background="#6FC98A " HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,360,0,0" Click="button1_Click"/>
    </Grid>
