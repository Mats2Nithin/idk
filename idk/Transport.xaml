                                <TextBlock Text="STARTING TIME" FontWeight="Bold" TextWrapping="Wrap" Grid.Column="1" FontSize="22" Margin="88,0,0,0" Grid.ColumnSpan="2"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="175"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="R.N.S. Motors via Basaveshwara nagara" TextAlignment="Center" TextWrapping="Wrap" Grid.Column="0" FontSize="20" Height="53" VerticalAlignment="Bottom" Grid.ColumnSpan="2" Margin="0,0,9.667,0"/>

                                <TextBlock Text="7:15 A.M." TextWrapping="Wrap" Grid.Column="2" FontSize="20"/>

                            </Grid>
                        </StackPanel>
                        <StackPanel Height="20"/>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="175"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="R.N.S. Motors via Malleshwaram" TextAlignment="Center" TextWrapping="Wrap" Grid.Column="0" FontSize="20" Height="53" VerticalAlignment="Bottom" Grid.ColumnSpan="2" Margin="0,0,9.667,0"/>

                                <TextBlock Text="7:00 A.M." TextWrapping="Wrap" Grid.Column="2" FontSize="20"/>

                            </Grid>
                        </StackPanel>
                        <StackPanel Height="20"/>
                        <StackPanel>
                            <Grid>
