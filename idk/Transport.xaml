                                </Grid.ColumnDefinitions>
                                <TextBlock Text="RNS Motors via Nagarabhavi" TextAlignment="Center" TextWrapping="Wrap" Grid.Column="0" FontSize="20" Height="53" VerticalAlignment="Bottom" Grid.ColumnSpan="2" Margin="0,0,9.667,0"/>

